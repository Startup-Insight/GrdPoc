@model IEnumerable<GrdPoc.Models.Entities.Budget>

@{
    ViewBag.Title = "Index";
}

<h2>Budgets belonging to @Session["currentUserName"]</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BudgetOwner.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BudgetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BudgetIdCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BudgetInitialBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BudgetBalance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BudgetOwner.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BudgetName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BudgetIdCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BudgetInitialBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BudgetBalance)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.BudgetId })
        </td>
    </tr>
}

</table>
